<configuration>
    <!-- 定义控制台输出的格式 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 定义文件输出的格式 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>  <!-- 保留 30 天的日志 -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 设置根日志级别和输出目标 -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />  <!-- 控制台输出 -->
        <appender-ref ref="FILE" />     <!-- 文件输出 -->
    </root>

    <!-- 设置特定包的日志级别 -->
    <logger name="com.baomidou.mybatisplus" level="DEBUG" />  <!-- MyBatis-Plus SQL 日志 -->
    <logger name="org.apache.ibatis" level="DEBUG" />        <!-- MyBatis SQL 日志 -->
    <logger name="org.hibernate.SQL" level="DEBUG" />        <!-- Hibernate SQL 日志 -->

    <!-- 如果需要，可以设置更多的包日志级别 -->
</configuration>